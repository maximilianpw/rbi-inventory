{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "LibreStock Remote",
  "version": "0.1.0",
  "identifier": "com.librestock.inventory.remote",
  "build": {
    "frontendDist": "../src-ui",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "LibreStock Remote",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http: https:; img-src 'self' data: http: https:; style-src 'self' 'unsafe-inline'; script-src 'self'; navigate-to http: https:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
