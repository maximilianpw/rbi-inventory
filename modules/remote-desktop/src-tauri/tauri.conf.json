{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "RBI Remote",
  "version": "0.1.0",
  "identifier": "com.rbi.inventory.remote",
  "build": {
    "frontendDist": "../src-ui",
    "devPath": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "RBI Remote",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http: https:; img-src 'self' data: http: https:; style-src 'self' 'unsafe-inline'; script-src 'self'; navigate-to http: https:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
